<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".Transact">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/titleass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="My Asset"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        />

    <ImageButton
        android:id="@+id/closebtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/subtitleass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@+id/titleass"
        android:layout_marginTop="50dp"
        android:text="Your total asset portfolio"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/assval"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="@+id/subtitleass"
        android:text="Kes 1,800,000"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/percinc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="60dp"
        android:layout_marginTop="95dp"
        app:srcCompat="@drawable/arro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="130dp"
        android:text="Current plan"
        android:textColor="@color/black"
        android:textSize="30dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="170dp"
        app:cardBackgroundColor="@color/gold"
        app:cardCornerRadius="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gold"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/assetperc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="30% return"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/imgasset"
            android:layout_width="423dp"
            android:layout_height="233dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/dolar"

            android:textAlignment="textEnd"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="See all pans >"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/hist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"/>




</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>