<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity" >

 <TextView
     android:id="@+id/headert"
     android:layout_marginTop="80dp"
     android:textAlignment="center"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Welcome, Andrew."
     android:textSize="28sp"
     android:textColor="@color/black"/>


 <androidx.cardview.widget.CardView
     android:id="@+id/assetcard"
     android:layout_width="350dp"
     android:layout_height="120dp"
     android:layout_marginTop="120dp"
     android:layout_centerHorizontal="true"
     android:padding="4dp"
     android:layout_gravity="center"
     app:cardBackgroundColor="@color/green">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:padding="4dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

     <TextView
         android:id="@+id/AssetWel"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="Your Total asset Portfolio"
         android:textColor="@color/white"
         android:textAlignment="center"
         android:textSize="16dp"/>

   <TextView
       android:id="@+id/assetVal"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="left"
       android:layout_marginTop="30dp"
       android:text="Kes 1,800,000"
       android:textColor="@color/white"
       android:textSize="28dp"
       tools:layout_editor_absoluteX="5dp"
       tools:layout_editor_absoluteY="-36dp" />

   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="130dp"
       android:layout_height="60dp"
       android:background="@color/white"
       android:text="Invest now"
       android:textSize="18dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.93"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.733"
       tools:ignore="MissingConstraints" />


  </androidx.constraintlayout.widget.ConstraintLayout>
 </androidx.cardview.widget.CardView>

 <TextView
     android:id="@+id/dealsT"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Best Plans"
     android:layout_marginTop="260dp"
     android:textColor="@color/black"
     android:textSize="28dp"/>

 <TextView
     android:id="@+id/deals"
     android:layout_width="90dp"
     android:layout_height="34dp"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="260dp"
     android:layout_marginEnd="12dp"
     android:text="See more >"
     android:textColor="@color/black"
     android:textSize="16dp"
     android:textAlignment="center"/>

 <LinearLayout
     android:id="@+id/horScroll"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="300dp">

  <androidx.cardview.widget.CardView
      android:layout_width="120dp"
      android:layout_height="130dp"
      android:layout_gravity="center"
      app:cardBackgroundColor="@color/gold"
      android:padding="4dp"
      android:layout_marginLeft="40dp">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Gold"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="16dp"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:layout_marginTop="25dp"
       android:text="30% return"
       android:textAlignment="center"
       android:textColor="@color/black"
       android:textSize="16dp"/>
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:layout_marginLeft="30dp"
       android:layout_marginTop="55dp"
       android:src="@drawable/dolar"

    />
  </androidx.cardview.widget.CardView>
 </LinearLayout>


 <TextView
     android:id="@id/title"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_marginLeft="5dp"
     android:text="Investment Guide"
     android:layout_marginTop="480dp"
     android:textAlignment="center"
     android:textColor="@color/black"
     android:textSize="26dp" />

 <androidx.recyclerview.widget.RecyclerView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="520dp"
     />

 <com.google.android.material.bottomnavigation.BottomNavigationView
     android:id="@+id/bottomnav"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     app:menu="@menu/bottom_nav"
     app:itemBackground="@color/white"/>




</RelativeLayout>
